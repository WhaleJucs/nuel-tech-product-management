// Configuração do Banco de Dados

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Modelo do Usuário (Extra)
model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  isAdmin   Boolean @default(false)
  createdAt DateTime @default(now())
}

// Modelo do Produto (Exigido)
model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String
  stock       Int
}