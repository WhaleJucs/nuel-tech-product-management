// Configuração do Banco de Dados

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Modelo do Produto exigido

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  price       Float
  category    String
  stock       Int
}